<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>Albüm Ekle</title>
  </head>
  <body>
      <table>
          <tr><a href="/" >Anasayfa</a></tr>
          <br>
           <tr>
            <a href="listArtist">Sanatçıları Listele</a>
            <br>
            <a href="addArtist">Sanatçı Ekle</a>
          </tr>
          <tr>
              <br>
            <a href="listAlbum">Albümleri Listele</a>
            <br>
            <a href="addAlbum">Albüm Ekle</a>  
          </tr> 
          <br>
          <tr>
            <a href="listMusicType">Müzik Türleri Listele</a>
            <br>
            <a href="addMusicType">Müzik Türü Ekle</a>
          </tr>
        </table> 
    <div class="container">
      <nav>
            <ul>
            <li><a href="listAlbum">Albümler</a></li>
          </ul>
        </nav>
        <form method="post" action="addAlbum">
          <table align="center">
            <tr>
              <td>Albüm Adı:</td>
              <td><input required type="text" name="albumName" class="input"></td>
            </tr>
            <tr>
              <td>Sanatçı Adı:</td>
              <td>
                <select required class="input" name="artistName">
                  <option></option>
                  <% artist.forEach(function(data){ %>
                  <option value="<%=data.ArtistId%>"><%=data.ArtistName%></option>
                  <% }); %>
                </select>
              </td>
            </tr>
            <tr>
              <td>Müzik Türü:</td>
              <td>
                <select required class="input" name="musicType">
                  <option></option>
                  <% musictype.forEach(function(data){ %>
                  <option value="<%=data.MusicTypeId%>"><%=data.MusicType%></option>
                  <% }); %>
                </select>
              </td>
            </tr>
            <tr>
              <td>Albüm Çıkış Tarihi:</td>
              <td><input required type="date" class="input" name="LaunchAlbum"></td>
            </tr>
            <tr>
              <td></td>
              <td><input type="submit" value="Add Album"></td>
            </tr>
        </table>
      </form>
    </div>
  </body>
</html>